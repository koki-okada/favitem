<div class="contents-row">
    <% @blogs.each do |blog| %>
        <div class="content-post">
            <%= simple_format(blog.text) %>
            <ul class="content-menu">
                <li class="content-menu-list">
                    <a href="/<%= blog.id %>/show">SHOW</a>
            <% if user_signed_in? && current_user.id == blog.user_id %>
                </li>
                <li class="content-menu-list">
                     <a href="/<%= blog.id %>/edit">EDIT</a>
                </li>
                <li class="content-menu-list">
                    <a href="/<%= blog.id %>/delete">DESTROY</a>
                </li>
            <% end %>
            </ul>
        </div>
    <% end %>
</div>