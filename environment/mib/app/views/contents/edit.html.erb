<div class="post-form">
  <% if user_signed_in? && current_user.id == @content.user_id %>
      <%= form_with model: @content do |f| %>
          <div class="title-box">
            <div class="title">
              <%= f.label :タイトル %>
            </div>
            <div class="title-area">
              <%= f.text_field :title, :class => 'title-form' %>
            </div>
          </div>
          <div class="text-box">
            <div class="text">
              <%= f.label :本文 %>
            </div>
            <div class="text-area">
              <%= f.text_area :text, :class => 'text-form' %>
            </div>
          </div>
          <div class="button">
            <%= f.submit "変更する" %>
          </div>
      <% end %>
  </div>